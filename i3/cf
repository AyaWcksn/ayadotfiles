        # colour of border, background, and text
        focused_workspace       #ffffff #d33684 #d8dee8
        active_workspace        #ffffff #dddddd #d8dee8
        inactive_workspace      #ffffff #6c71c4 #d8dee8
        urgent_workspacei       #ffffff #ebcb8b #2f343f
    }
	status_command i3status
	position top
}

